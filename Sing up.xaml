<Window x:Class="ProyectoProgra2._0.Sing_up"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoProgra2._0"
        mc:Ignorable="d"
        Title="Sing_up" Height="800" Width="1200
        ">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="imagenes/fondo.jpg"
                    Stretch="UniformToFill"
                    Opacity="1"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="140"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="127,12,0,0" Grid.RowSpan="2">
            <Border Width="80" Height="80" Background="#2CB34B" CornerRadius="12">
                <TextBlock Text="BNB" Foreground="White" FontSize="30" FontWeight="Bold"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <TextBlock FontWeight="Bold" Text="Crear cuenta" FontSize="38" Foreground="#2CB34B"
                   HorizontalAlignment="Center" Margin="0,10,0,0" />
        </StackPanel>
        <Label Content="Nombres:" FontSize="24" FontWeight="Bold" Foreground="White"
           HorizontalAlignment="Right" Margin="0,13,30,61"
           Grid.Row="1" Grid.RowSpan="2" />
        <TextBox x:Name="txtNombre"
             Grid.Column="1" Grid.Row="1"
             Height="48" FontSize="20"
             Background="#60000000" Foreground="White"
             BorderBrush="#20FFFFFF" BorderThickness="2"
             Padding="14" Margin="20,0,30,0"/>
        <Label Content="Ap. Paterno:" FontSize="24" FontWeight="Bold" Foreground="White"
           HorizontalAlignment="Right" Margin="0,13,30,61"
           Grid.Row="2" Grid.RowSpan="2" />
        <TextBox x:Name="txtApPaterno"
             Grid.Column="1" Grid.Row="2"
             Height="48" FontSize="20"
             Background="#60000000" Foreground="White"
             BorderBrush="#20FFFFFF" BorderThickness="2"
             Padding="14" Margin="20,0,30,0"/>
        <Label Content="Ap. Materno:" FontSize="24" FontWeight="Bold" Foreground="White"
           HorizontalAlignment="Right" Margin="0,13,30,61"
           Grid.Row="3" Grid.RowSpan="2" />
        <TextBox x:Name="txtApMaterno"
             Grid.Column="1" Grid.Row="3"
             Height="48" FontSize="20"
             Background="#60000000" Foreground="White"
             BorderBrush="#20FFFFFF" BorderThickness="2"
             Padding="14" Margin="20,0,30,0"/>
        <Label Content="E-mail:" FontSize="24" FontWeight="Bold" Foreground="White"
           HorizontalAlignment="Right" Margin="0,13,30,61"
           Grid.Row="4" Grid.RowSpan="2" />
        <TextBox x:Name="txtEmail"
             Grid.Column="1" Grid.Row="4"
             Height="48" FontSize="20"
             Background="#60000000" Foreground="White"
             BorderBrush="#20FFFFFF" BorderThickness="2"
             Padding="14" Margin="20,0,30,0"/>
        <Label Content="Celular:" FontSize="24" FontWeight="Bold" Foreground="White"
           HorizontalAlignment="Right" Margin="0,13,30,61"
           Grid.Row="5" Grid.RowSpan="2" />
        <TextBox x:Name="txtCelular"
             Grid.Column="1" Grid.Row="5"
             Height="48" FontSize="20"
             Background="#60000000" Foreground="White"
             BorderBrush="#20FFFFFF" BorderThickness="2"
             Padding="14" Margin="20,0,30,0"/>
        <Label Content="Contraseña:" FontSize="24" FontWeight="Bold" Foreground="White"
           HorizontalAlignment="Right" Margin="0,13,30,187"
           Grid.Row="6" Grid.RowSpan="2" />
        <PasswordBox x:Name="pwdPass"
                 Grid.Column="1" Grid.Row="6"
                 Height="48" FontSize="20"
                 Background="#60000000" Foreground="White"
                 BorderBrush="#20FFFFFF" BorderThickness="2"
                 Padding="14" Margin="20,0,30,0"/>
        <StackPanel Grid.Row="7" Grid.ColumnSpan="2"
                Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnLimpiar"
                Content="Limpiar"
                FontSize="20"
                Background="#7B3B7B" Foreground="White"
                Margin="40,10" Width="140" Height="48"/>
            <Button x:Name="btnAceptar"
                Content="Aceptar"
                FontSize="20"
                Background="#2CB34B" Foreground="White"
                Margin="40,10" Width="140" Height="48" Click="btnAceptar_Click"/>
        </StackPanel>
    </Grid>
</Window>
