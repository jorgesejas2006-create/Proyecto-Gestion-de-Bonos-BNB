<Window x:Class="ProyectoProgra2._0.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoProgra2._0"
        mc:Ignorable="d"
        Title="Login" Height="800" Width="1200">
    <Grid >
        <Grid.Background>
            <ImageBrush ImageSource="imagenes/fondo.jpg"
             Stretch="UniformToFill"
             Opacity="1"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left" Margin="480,32,0,0" Grid.RowSpan="2">
            <Border Width="85" Height="85" Background="#2CB34B" CornerRadius="18">
                <TextBlock Text="BNB" 
                       Foreground="White"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="Iniciar Sesión"
                   HorizontalAlignment="Center"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="#2CB34B"
                   Margin="0,18,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="50,0" VerticalAlignment="Center">
            <TextBlock Text="Correo electronico"
                   Foreground="White"
                   FontSize="20"
                   Margin="0,0,0,5"/>

            <TextBox x:Name="txtgmail"
                 Height="48"
                 FontSize="18"
                 Background="#60000000"
                 Foreground="White"
                 BorderBrush="#2CB34B"
                 BorderThickness="1.5"
                 Padding="12" Width="329"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="50,0" VerticalAlignment="Top">
            <TextBlock Text="Contraseña"
                   Foreground="White"
                   FontSize="20"
                   Margin="0,0,0,5"/>
            <PasswordBox x:Name="pwdpas"
                     Height="48"
                     FontSize="18"
                     Background="#60000000"
                     Foreground="White"
                     BorderBrush="#2CB34B"
                     BorderThickness="1.5"
                     Padding="12" Width="331"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="50,121,50,118" Grid.RowSpan="3">
            <Button x:Name="btnAceptar"
                Content="Ingresar"
                Height="48"
                FontSize="20"
                Background="#2CB34B"
                Foreground="White"
                BorderThickness="0"
                Margin="0,10,0,0"
                Click="btnAceptar_Click" Width="317"/>

            <Button x:Name="btnLinpiar"
                Content="Limpiar"
                Height="48"
                FontSize="20"
                Background="#7B3B7B"
                Foreground="White"
                BorderThickness="0"
                Margin="0,10,0,0"
                Click="btnLinpiar_Click" Width="316"/>
        </StackPanel>

        <Button x:Name="btnRegistro"
            Grid.Row="4"
            Content="Crear Cuenta"
            Height="48"
            FontSize="20"
                FontWeight="Bold"
            Background="Transparent"
            Foreground="White"
            BorderBrush="White"
            BorderThickness="2"
            Margin="442,28,442,44"
            Click="btnRegistro_Click"/>

    </Grid>
</Window>
