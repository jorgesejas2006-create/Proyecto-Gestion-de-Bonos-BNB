<Window x:Class="ProyectoProgra2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoProgra2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="imagenes/fondo.jpg"
           Stretch="UniformToFill"
           Opacity="1"/>
        </Grid.Background>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="180"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="551,27,0,0" Grid.RowSpan="2">
            <Border Width="76" Height="76" Background="#2CB34B" CornerRadius="10">
                <TextBlock Text="BNB" FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <TextBlock Text="¡Hola!" FontSize="36" FontWeight="SemiBold" Foreground="#7B3B7B" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="🔒" FontSize="90" Foreground="#109E4A" RenderTransformOrigin="0.524,1.39"/>
        </StackPanel>
        <Button x:Name="btnContrasena"
            Grid.Row="4"
            Height="50"
            Content="Usar Contraseña"
            Background="#109E4A"
            Foreground="White"
            FontSize="20"
            Margin="424,10,424,120"
            Click="btnContrasena_Click" Grid.ColumnSpan="2"/>

        <Button x:Name="btnCerrarSesion"
            Grid.Row="4"
            Height="50"
            Content="Cerrar Sesión"
            Background="#7B3B7B"
            Foreground="White"
            FontSize="20"
            Margin="424,90,424,40"
            Click=" cerarSesion_Click" Grid.ColumnSpan="2"/>

        <StackPanel x:Name="PanelContraseña"
                Grid.Row="3" Grid.ColumnSpan="2"
                Visibility="Collapsed"
                Background="#AAFFFFFF"
                Margin="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <TextBlock Text="Ingrese su contraseña"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>
            <PasswordBox x:Name="txtPassword"
                     FontSize="20"
                     Margin="0,10,0,10"
                     Padding="10"/>
            <Button Content="Aceptar"
                Click="AceptarContraseña_Click"
                Background="#109E4A"
                Foreground="White"
                FontSize="18"
                Padding="10"
                Margin="0,10,0,0"/>
        </StackPanel>

    </Grid>
</Window>
