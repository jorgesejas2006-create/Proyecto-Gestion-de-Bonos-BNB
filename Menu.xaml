<Window x:Class="ProyectoProgra2._0.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyectoProgra2._0"
        mc:Ignorable="d"
        Title="Menu" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">


    <Window.Resources>
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6366F1" Offset="0"/>
            <GradientStop Color="#8B5CF6" Offset="0.5"/>
            <GradientStop Color="#EC4899" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="HoverGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#7C3AED" Offset="0"/>
            <GradientStop Color="#A855F7" Offset="0.5"/>
            <GradientStop Color="#F472B6" Offset="1"/>
        </LinearGradientBrush>

        <Style x:Key="ServiceButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="30">
                            <Border.Effect>
                                <DropShadowEffect Color="#6366F1" BlurRadius="0" 
                                                ShadowDepth="0" Opacity="0"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                          To="#8B5CF6" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                           To="30" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                           To="0.6" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="border"
                                                          Storyboard.TargetProperty="(Border.BorderBrush).(SolidColorBrush.Color)"
                                                          To="#334155" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                                           To="0" Duration="0:0:0.3"/>
                                            <DoubleAnimation Storyboard.TargetName="border"
                                                           Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                           To="0" Duration="0:0:0.3"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.95" ScaleY="0.95"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/imagenes/Gemini_Generated_Image_4eut8q4eut8q4eut.png"
            Stretch="UniformToFill"
            Opacity="1"/>
        </Grid.Background>
        <Canvas>
            <Ellipse Width="400" Height="400" Fill="#6366F1" Opacity="0.1" 
                     Canvas.Left="-100" Canvas.Top="-100">
                <Ellipse.Effect>
                    <BlurEffect Radius="100"/>
                </Ellipse.Effect>
            </Ellipse>
            <Ellipse Width="300" Height="300" Fill="#EC4899" Opacity="0.1" 
                     Canvas.Right="-50" Canvas.Bottom="-50">
                <Ellipse.Effect>
                    <BlurEffect Radius="80"/>
                </Ellipse.Effect>
            </Ellipse>
        </Canvas>

        <Grid Margin="60">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,50">
                <TextBlock FontSize="70" FontWeight="Bold" 
                          HorizontalAlignment="Center" Margin="0,10,0,0">
                    <TextBlock.Foreground>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                            <GradientStop Color="#2CB34B" Offset="0"/>
                            <GradientStop Color="#EC4899" Offset="1"/>
                        </LinearGradientBrush>
                    </TextBlock.Foreground><Run Language="es-es" Text="Menú Principal"/></TextBlock>
            </StackPanel>

            <UniformGrid Grid.Row="1" Columns="3" Rows="2" 
                        HorizontalAlignment="Center" VerticalAlignment="Center">

                <Button Background="{StaticResource PrimaryGradient}"
                       Margin="15" >
                    <StackPanel>
                        <Border Background="#2CB34B" 
                               Width="80" Height="80" CornerRadius="40"
                               Margin="0,0,0,20">
                            <Viewbox Width="40" Height="40">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="White" Data="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1.41 16.09V20h-2.67v-1.93c-1.71-.36-3.16-1.46-3.27-3.4h1.96c.1 1.05.82 1.87 2.65 1.87 1.96 0 2.4-.98 2.4-1.59 0-.83-.44-1.61-2.67-2.14-2.48-.6-4.18-1.62-4.18-3.67 0-1.72 1.39-2.84 3.11-3.21V4h2.67v1.95c1.86.45 2.79 1.86 2.85 3.39H14.3c-.05-1.11-.64-1.87-2.22-1.87-1.5 0-2.4.68-2.4 1.64 0 .84.65 1.39 2.67 1.91s4.18 1.39 4.18 3.91c-.01 1.83-1.38 2.83-3.12 3.16z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Text="Créditos" FontSize="28" FontWeight="Bold" 
                                  Foreground="White" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Background="{StaticResource PrimaryGradient}" 
                       Margin="15">
                    <StackPanel>
                        <Border Background="#2CB34B" 
                               Width="80" Height="80" CornerRadius="40"
                               Margin="0,0,0,20">
                            <Viewbox Width="40" Height="40">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="White" Data="M20 4H4c-1.11 0-1.99.89-1.99 2L2 18c0 1.11.89 2 2 2h16c1.11 0 2-.89 2-2V6c0-1.11-.89-2-2-2zm0 14H4v-6h16v6zm0-10H4V6h16v2z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Text="Tarjetas de crédito" FontSize="28" FontWeight="Bold" 
                                  Foreground="White" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Background="{StaticResource PrimaryGradient}" 
                       Margin="15" >
                    <StackPanel>
                        <Border Background="#2CB34B" 
                               Width="80" Height="80" CornerRadius="40"
                               Margin="0,0,0,20">
                            <Viewbox Width="40" Height="40">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="White" Data="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Text="Ahorro e inversión" FontSize="28" FontWeight="Bold" 
                                  Foreground="White" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Background="{StaticResource PrimaryGradient}" 
                       Margin="15" >
                    <StackPanel>
                        <Border Background="#2CB34B" 
                               Width="80" Height="80" CornerRadius="40"
                               Margin="0,0,0,20">
                            <Viewbox Width="40" Height="40">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="White" Data="M20 2H4c-1.1 0-1.99.9-1.99 2L2 22l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zM6 9h12v2H6V9zm8 5H6v-2h8v2zm4-6H6V6h12v2z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Text="Servicios" FontSize="28" FontWeight="Bold" 
                                  Foreground="White" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Background="{StaticResource PrimaryGradient}"
                       Margin="15" >
                    <StackPanel>
                        <Border Background="#2CB34B" 
                               Width="80" Height="80" CornerRadius="40"
                               Margin="0,0,0,20">
                            <Viewbox Width="40" Height="40">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="White" Data="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4zm-2 16l-4-4 1.41-1.41L10 14.17l6.59-6.59L18 9l-8 8z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Text="Seguros" FontSize="28" FontWeight="Bold" 
                                  Foreground="White" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Background="{StaticResource PrimaryGradient}" 
                       Margin="15">
                    <StackPanel>
                        <Border Background="#2CB34B" 
                               Width="80" Height="80" CornerRadius="40"
                               Margin="0,0,0,20">
                            <Viewbox Width="40" Height="40">
                                <Canvas Width="24" Height="24">
                                    <Path Fill="White" Data="M17 1.01L7 1c-1.1 0-2 .9-2 2v18c0 1.1.9 2 2 2h10c1.1 0 2-.9 2-2V3c0-1.1-.9-1.99-2-1.99zM17 19H7V5h10v14z"/>
                                </Canvas>
                            </Viewbox>
                        </Border>
                        <TextBlock Text="Servicios digitales" FontSize="28" FontWeight="Bold" 
                                  Foreground="White" TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
        </Grid>
    </Grid>
</Window>
